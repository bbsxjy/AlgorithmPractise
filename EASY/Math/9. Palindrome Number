public class Solution {
    public boolean isPalindrome(int x) {
        
    	if(x<0){
    		return false;
    	}
    	
    	
    	if(x<10 && x>=0){
    		return true;
    	}
    	
    	
    	
    	String ori=""+x,news="";
        for(int i =ori.length()-1; i>=0;i--){
        	news=news+ori.charAt(i);
        }
        
        if(ori.equals(news)){
        	return true;
        }
        
        return false;
    }
}
